<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM2022.Views.SearchPerson">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="Name" Text="{Binding Filter}"></Entry>
            <Button Text="Search" Command="{Binding Search}"></Button>
            <Label Text="{Binding Result}" FontSize="Large" HorizontalOptions="CenterAndExpand"
                    ></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>