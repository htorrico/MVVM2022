<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM2022.Views.Operations">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical">
                <Label Text="Valor 1"/>
                <Editor Text="{Binding Valor1}"  ></Editor>
                <Label Text="Valor 2"/>
                <Editor Text="{Binding Valor2}" ></Editor>
            </StackLayout>

            <StackLayout Orientation="Vertical">
                <Button Text="Sumar" Command="{Binding Sumar}" />
                <Label Text="{Binding ResultadoSuma}"/>
                <Button Text="Restar" Command="{Binding Restar}" />
                <Label Text="{Binding ResultadoResta}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>